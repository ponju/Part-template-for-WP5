{
    "compilerOptions": {
        "outDir": "./dist/",
        // ソースマップを有効化
        "sourceMap": true,
        // TSはECMAScript 5に変換
        "target": "ES6",
        // TSのモジュールはES Modulesとして出力
        "module": "ES2015",
        // 厳密モードとして設定
        "strict": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
}
